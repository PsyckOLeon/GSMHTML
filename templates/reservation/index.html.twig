{% extends 'base.html.twig' %}

{% block title %}Access{% endblock %}

{% block body %}
    <div class="container">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalAjout">
            Ajout d'un access
        </button>
        <div class="modal fade modal-lg " id="ModalAjout" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="ModalLabel">Nouvelle Réservation</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <br>
                    <div class="container">
                        {{ form_start(form) }}
                        <div class="row g-3 needs-validation">
                            <div class="col-md-6">
                                <label for="validationServer01" class="form-label">Lieux</label>
                                {{ form_widget(form.location) }}
                            </div>
                            <div class="col-md-6">
                                <label for="validationServer02" class="form-label">Date de début</label>
                                {{ form_widget(form.start_date) }}
                            </div>
                            <div class="col-md-3">
                                <label for="validationServer03" class="form-label">date de fin</label>
                                {{ form_widget(form.end_date) }}
                            </div>
                            <div class="col-md-2">
                                <label for="validationServer03" class="form-label">Heure démmarage</label>
                                {{ form_widget(form.start_time) }}
                            </div>
                            <div class="col-md-2">
                                <label for="validationServer03" class="form-label">Heure Fin</label>
                                {{ form_widget(form.end_time) }}
                            </div>
                            <div class="col-md-2">
                                <label for="validationServer03" class="form-label">Cycle</label>
                                {{ form_widget(form.cycle) }}
                            </div>
                            <div class="col-md-2">
                                <label for="validationServer03" class="form-label">Cycle</label>
                                {{ form_widget(form.userid) }}
                            </div>
                            <div class="col-md-2">
                                <label for="validationServer03" class="form-label">Cycle</label>
                                {{ form_widget(form.accessid) }}
                            </div>
                        </div>
                        <br>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        {{ form_end(form) }}
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-light">
            <tr>
                <th scope="col">id</th>
                <th scope="col">Lieux</th>
                <th scope="col">Date de début</th>
                <th scope="col">Date de fin</th>
                <th scope="col">Heure de début</th>
                <th scope="col">Heure de fin</th>
                <th scope="col">Cycle</th>
                <th scope="col">User ID</th>
                <th scope="col">Access ID</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% if reservation is iterable %}
                {% for reservations in reservation %}
                    <tr>
                        <th scope="row">{{ reservations.id }}</th>
                        <td>{{ reservations.location }}</td>
                        <td>{{ reservations.start_date }}</td>
                        <td>{{ reservations.end_date }}</td>
                        <td>{{ reservations.start_time }}</td>
                        <td>{{ reservations.end_time }}</td>
                        <td>{{ reservations.cycle }}</td>
                        <td>{{ reservations.userid }}</td>
                        <td>{{ reservations.accessid }}</td>
                        <td>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#ModalModif_{{ reservations.id }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-tools" viewBox="0 0 16 16">
                                    <path d="M1 0 0 1l2.2 3.081a1 1 0 0 0 .815.419h.07a1 1 0 0 1 .708.293l2.675 2.675-2.617 2.654A3.003 3.003 0 0 0 0 13a3 3 0 1 0 5.878-.851l2.654-2.617.968.968-.305.914a1 1 0 0 0 .242 1.023l3.27 3.27a.997.997 0 0 0 1.414 0l1.586-1.586a.997.997 0 0 0 0-1.414l-3.27-3.27a1 1 0 0 0-1.023-.242L10.5 9.5l-.96-.96 2.68-2.643A3.005 3.005 0 0 0 16 3q0-.405-.102-.777l-2.14 2.141L12 4l-.364-1.757L13.777.102a3 3 0 0 0-3.675 3.68L7.462 6.46 4.793 3.793a1 1 0 0 1-.293-.707v-.071a1 1 0 0 0-.419-.814zm9.646 10.646a.5.5 0 0 1 .708 0l2.914 2.915a.5.5 0 0 1-.707.707l-2.915-2.914a.5.5 0 0 1 0-.708M3 11l.471.242.529.026.287.445.445.287.026.529L5 13l-.242.471-.026.529-.445.287-.287.445-.529.026L3 15l-.471-.242L2 14.732l-.287-.445L1.268 14l-.026-.529L1 13l.242-.471.026-.529.445-.287.287-.445.529-.026z"/>
                                </svg>
                            </button>
                            <!-- Modal -->
                            <div class="modal fade modal-lg " id="ModalModif_{{ reservations.id }}" tabindex="-1"
                                 aria-labelledby="ModalLabelModif_{{ reservations.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="ModalLabelModif">{{ reservations.location }}</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div class="container">
                                            <div class="modal-body">
                                                {{ form_start(formedit[reservations.id],{'action': path('reservation_edit', {id: reservations.id}) })}}
                                                <div class="row g-3 needs-validation">
                                                    <div class="col-md-6">
                                                        <label for="validationServer01" class="form-label">Nom</label>
                                                        {{ form_widget(formedit[reservations.id].location) }}
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="validationServer02" class="form-label">Téléphone</label>
                                                        {{ form_widget(formedit[reservations.id].startdate) }}
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="validationServer03" class="form-label">Port 1</label>
                                                        {{ form_widget(formedit[reservations.id].enddate) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label for="validationServer03" class="form-label">Port 2</label>
                                                        {{ form_widget(formedit[reservations.id].starttime) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label for="validationServer03" class="form-label">Port 3</label>
                                                        {{ form_widget(formedit[reservations.id].endtime) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label for="validationServer03" class="form-label">Cycle</label>
                                                        {{ form_widget(formedit[reservations.id].cycle) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label for="validationServer03" class="form-label">Cycle</label>
                                                        {{ form_widget(formedit[reservations.id].userid) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label for="validationServer03" class="form-label">Cycle</label>
                                                        {{ form_widget(formedit[reservations.id].accessid) }}
                                                    </div>
                                                </div>
                                                <br>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <table class="table text-center">
                                                <thead class="thead-light">
                                                <tr>
                                                    <th>
                                                        <button type="submit" class="btn btn-primary">Sauvegarder
                                                        </button>
                                                    </th>
                                                    {{ form_end(formedit[reservations.id]) }}
                                                    <th>
                                                        <form method="post"
                                                              action="{{ path('access_delete', {id: reservations.id}) }}"
                                                              style="display: inline-block"
                                                              onsubmit="return confirm('Etes-vous sûr de supprimer {{ reservations.location }} ?')">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <button type="submit" class="btn btn-danger">Supprimer
                                                            </button>
                                                        </form>
                                                    </th>
                                                    <th>
                                                        <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">
                                                            Fermer
                                                        </button>
                                                    </th>
                                                </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <h1>Pas de donné</h1>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
